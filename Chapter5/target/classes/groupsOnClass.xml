<?xml version="1.0" encoding="UTF-8" ?>
<suite name="testGroupsOnClass">
    <test name="onlyRunStadunt">
        <groups>
            <run>
                <include name="student"/>
            </run>
        </groups>
        <classes>
            <class name="com.course.testng.groups.StudentTest"/>
            <class name="com.course.testng.groups.TeacherTest"/>
        </classes>
    </test>
    <test name="onlyRunTeacher">
        <groups>
            <run>
                <include name="teacher"/>
            </run>
        </groups>
        <classes>
            <class name="com.course.testng.groups.StudentTest"/>
            <class name="com.course.testng.groups.TeacherTest"/>
        </classes>
    </test>

</suite>